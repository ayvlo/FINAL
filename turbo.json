{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "APP_ENV",
    "POSTGRES_URL",
    "CLICKHOUSE_URL",
    "REDPANDA_BROKER",
    "UPSTASH_REDIS_REST_URL",
    "OPENAI_API_KEY",
    "AUTH0_CLIENT_ID",
    "WORKOS_CLIENT_ID",
    "SENTRY_DSN",
    "NEXT_PUBLIC_SENTRY_DSN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
